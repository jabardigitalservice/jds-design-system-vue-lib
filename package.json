{
  "name": "jds-design-system-vue-lib",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf publish/css publish/esm publish/wc",
    "build": "vue-cli-service build",
    "build-storybook": "build-storybook",
    "build:css": "sass styles/scss/index.scss:publish/css/jds.css --style=expanded --no-source-map",
    "build:css:watch": "nodemon --config nodemon-css.json --exec npm run build:css",
    "build:esm": "node scripts/build-esm.js",
    "build:wc": "node scripts/build-wc.js",
    "build:app": "node scripts/build-app.js",
    "playground:vue": "./node_modules/.bin/env-cmd -x vue-cli-service serve --port=\\$PLAYGROUND_VUE_PORT",
    "playground:html": "./node_modules/.bin/env-cmd -x live-server --entry-file=./playgrounds/html/index.html --port=\\$PLAYGROUND_WC_PORT --ignore=./node_modules,./playgrounds/vue",
    "dev:esm": "node scripts/dev-esm.js",
    "dev:wc": "node scripts/dev-wc.js",
    "storybook": "concurrently \"npm run build:css:watch\" \"start-storybook -p 6006\"",
    "chromatic": "chromatic --exit-zero-on-changes",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "@vue/web-component-wrapper": "^1.3.0",
    "core-js": "^3.6.5",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.5",
    "@fullhuman/purgecss-loader": "^1.0.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/vue": "^6.2.9",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "live-server": "^1.2.1",
    "node-sass": "^6.0.0",
    "nodemon": "^2.0.7",
    "sass": "^1.35.0",
    "sass-loader": "^10.1.1",
    "sass-resources-loader": "^2.2.1",
    "shelljs": "^0.8.4",
    "style-resources-loader": "^1.4.1",
    "svg-to-vue-component": "^0.3.8",
    "vue-loader": "^15.9.7",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
